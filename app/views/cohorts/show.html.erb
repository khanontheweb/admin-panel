<div class="container-fluid">
  <!-- card for general stuff -->
  <div class="row justify-content-center">
    <div class="col-sm-6">
      <div class="card">
        <div class="card-body pb-0">
          <div class="container">
            <div class="row justify-content-between mb-2">
              <div class="col text-left align-self-end">
                <h4 class="card-title mb-0">
                  <%=@cohort.name.upcase%>
                </h4>
              </div>
              <div class="col-sm-4 text-right align-self-end">
                <%= link_to 'Edit', edit_cohort_path(@cohort), class: "btn btn-primary" %>
              </div>
            </div>
            <div class="row justify-content-between mb-2">
              <div class="col-sm-4 text-left">
                <p class="mb-0">Start: <%=@cohort.start_date%> </p>
              </div>
              <div class="col-sm-4 text-right">
                <p class="mb-0">End: <%=@cohort.end_date%></p>
              </div>
            </div>
            <div class="row justify-content-between mb-2">
                <div class="col text-left align-self-end">
                  <p class="mb-0">
                    <%if @cohort.course_i.nil?%>
                      Course: None
                    <%else%>
                      Course: <%=Course.find(@cohort.course_i)%>
                    <%end%>
                  </p>
                </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row text-center">
    <div class="col">
      <%= link_to 'Edit', edit_cohort_path(@cohort) %> |
      <%= link_to 'Back', cohorts_path %>
    </div>
  </div>

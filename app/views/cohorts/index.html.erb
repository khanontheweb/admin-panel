<p id="notice"><%= notice %></p>

<h1>Cohorts</h1>

<div class="container-fluid">
  <div class="row">
    <div class="col">
      Name
      <%@cohorts.each do |cohort|%>
        <div class="row cohort-<%=cohort.id%>">
          <div class="col">
            <%=cohort.name%>
          </div>
        </div>
      <%end%>
    </div>
    <div class="col">
      Course
      <%@cohorts.each do |cohort|%>
        <div class="row cohort-<%=cohort.id%>">
          <div class="col">
            <% if cohort.course_i.nil?%>
              None
            <% else %>
              <%=course_of_cohort(cohort).name%>
            <%end%>
          </div>
        </div>
      <%end%>
    </div>
    <div class="col">
      Start Date
      <%@cohorts.each do |cohort|%>
        <div class="row cohort-<%=cohort.id%>">
          <div class="col">
            <%=cohort.start_date%>
          </div>
        </div>
      <%end%>
    </div>
    <div class="col">
      End Date
      <%@cohorts.each do |cohort|%>
        <div class="row cohort-<%=cohort.id%>">
          <div class="col">
            <%=cohort.end_date%>
          </div>
        </div>
      <%end%>
    </div>
    <div class="col">
      Options
      <%@cohorts.each do |cohort|%>
        <div class="row cohort-<%=cohort.id%>">
          <div class="col">
            <%= link_to 'Show', cohort %>
            <%= link_to 'Edit', edit_cohort_path(cohort) %>
            <%= link_to 'Destroy', cohort, method: :delete, data: { confirm: 'Are you sure?' }, remote: true %>
          </div>
        </div>
      <%end%>
    </div>
  </div>
</div>

<%= link_to 'New Cohort', new_cohort_path %>

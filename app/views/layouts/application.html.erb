<!DOCTYPE html>
<html>
  <head>
    <title>THERealPanel</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.2/css/bootstrap-select.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.2/js/bootstrap-select.min.js"></script>
  </head>

  <body>
    <% if current_user %>
      <nav class="nav flex-column side-nav">

        
        <% if @current_user.propic.attached? %>
          <% @img_type = image_type(@current_user.propic) %>
          <div class=<%=@img_type%>>
            <%= link_to image_tag(@current_user.propic, width: 200), @current_user %>
          </div>
        <% else %>
          <%= image_tag("avatar.png", width: 200, class:"circle-img") %>
        <% end %>


        <%= link_to(@curent_user, {class: "nav-item nav-link"} ) do %>
          <%= @current_user.first_name.upcase %>
          <%= @current_user.last_name.upcase %>
        <% end %>
        <%= link_to "Students", students_path, class:"nav-item nav-link"%>
        <%= link_to "Courses", courses_path, class:"nav-item nav-link"%>
        <%= link_to "Cohorts", cohorts_path, class:"nav-item nav-link"%>
        <%= link_to "Instructors", instructors_path, class:"nav-item nav-link"%>
        <%= link_to "Users", users_path, class:"nav-item nav-link"%>

      </nav>
    <% else %>
      <p>You are not logged in</p>
    <% end %>
    <%= yield %>
    
    
  </body>
</html>

<div class="container-fluid">
  <!-- card for general stuff -->
  <div class="row justify-content-center">
    <div class="col-sm-6">
      <div class="card">
        <div class="card-body pb-0">
          <div class="container">
            <div class="row justify-content-between mb-2">
              <div class="col text-left align-self-end">
                <h4 class="card-title mb-0">
                  <%=@course.name.upcase%>
                </h4>
              </div>
              <div class="col-sm-4 text-right align-self-end">
                <%= link_to 'Edit', edit_course_path(@course), class: "btn btn-primary" %>
              </div>
            </div>
            <div class="row justify-content-start mb-2">
              <div class="col-sm-2 text-left align-self-end">
                <p class="mb-0">Hours: <%=@course.hours%></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="card">
        <div class="card-body pb-0">
          <div class="container">
            <div class="row justify-content-start text-left">
              <div class="col text-left align-self-end">
                <h4 class="card-title mb-0">Taught in Cohorts</h4>
              </div>
            </div>
            <div class="row justify-content-start text-left">
              <ul class="list-group list-group-flush">
                <% get_taught_in_cohorts(@course).each do |cohort| %>
                  <li class="list-group-item"><%=Cohort.find(cohort.id).name%></li>
                <%end%>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row text-center">
  <div class="col">
    <%= link_to 'Edit', edit_course_path(@course) %> |
    <%= link_to 'Back', courses_path %>
  </div>
</div>
